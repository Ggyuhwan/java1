package ch05_control;

public class Conditional {
			//전역 변수
			// class 중괄호 안에 선언된 변수
			// 해당 클래스 내 어디서든 사용가능하다.
	static String subject = "조건문";
	public static void main(String[] args) {
		
		//지역변수
		//해당 스코프 안에서만 사용가능{}
		int price = 30000;
		int myMoney = 10000;
		
		//조건문 if 문
		if (myMoney > price) {
			System.out.println(subject);
			System.out.println("돈 부족");
			}
			}
		System.out.println("종료");
	}

}
