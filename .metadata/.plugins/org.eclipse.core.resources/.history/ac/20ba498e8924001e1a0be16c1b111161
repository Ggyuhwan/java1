package ch04_Operator;

import java.util.Scanner;

public class _01_If {

	public static void main(String[] args) {
		
		//swith case
		int ranking =2;
		if (ranking == 1) {
			System.out.println("전액 장학금");
		}else if (ranking == 2||ranking==3) {
			System.out.println("반액 장학금");
		}else if (ranking == 3) {
			System.out.println("반액 장학금");
		}else {
			System.out.println("대상 아님");
		}
		System.out.println("조회 완료1");
		ranking = 3;
		switch (ranking) {
		case 1:
			System.out.println("전액장학금");
			break;
		case 2:
			
		case 3:
			System.out.println("반액장학금");
			break;
		default:
			System.out.println("장학금 ㄴㄴ");
		}
		System.out.println("조회완료2");
		
		int grade = 1;
		int price = 7000;
		switch (grade) {
		case 1:
			price += 1000;
		case 2:
			price += 1000;
		case 3:
			price += 1000;
			break;
		}
		System.out.println(grade + "등급제품의 가격:"+price+"원");
		
	}

}
